{
  "name": "nome-do-teu-projeto",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "yarn lint && yarn test && yarn ssr:dev",
    "start:spa": "yarn validate && yarn dev",
    "start:ssr": "yarn validate && vite",
    "dev": "vite",
    "ssr:dev": "vite",
    "build": "tsc -b && vite build && vite-plugin-ssr prerender",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "check:deps": "depcheck",
    "prepare": "husky install",
    "postinstall": "yarn prepare",
    "validate": "yarn format:check && yarn lint && yarn test"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "i18next": "^24.2.3",
    "lucide-react": "^0.485.0",
    "posthog-js": "^1.234.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^15.4.1",
    "react-router-dom": "^7.4.1",
    "tailwind-merge": "^3.0.2",
    "tailwind-variants": "^1.0.0",
    "tailwindcss-animate": "^1.0.7",
    "vite-plugin-ssr": "^0.4.142",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "3",
    "@eslint/js": "^9.21.0",
    "@rrweb/types": "^2.0.0-alpha.18",
    "@storybook/addon-essentials": "8.6.11",
    "@storybook/addon-onboarding": "8.6.11",
    "@storybook/blocks": "8.6.11",
    "@storybook/experimental-addon-test": "8.6.11",
    "@storybook/react": "8.6.11",
    "@storybook/react-vite": "8.6.11",
    "@storybook/test": "8.6.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.14",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@types/react-helmet-async": "^1.0.3",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "@vitest/browser": "^3.0.9",
    "@vitest/coverage-v8": "^3.0.9",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^0.12.0",
    "globals": "^15.15.0",
    "husky": "8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.0",
    "playwright": "^1.51.1",
