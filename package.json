    "ts-node": "^10.9.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-plugin-swc": "^0.0.2",
    "vitest": "^3.0.9"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
      "*.ts": "eslint --fix",
  "*.tsx": "eslint --fix",
    "*.{ts,tsx}": "eslint --fix --no-warn-ignored"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
